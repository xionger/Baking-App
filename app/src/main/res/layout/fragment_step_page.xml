<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiongxh.baking_app.recipesteps.RecipeStepsActivity">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/pv_recipe_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cv_recipe_step_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        tools:targetApi="lollipop">

            <TextView
                android:id="@+id/tv_recipe_step_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="@dimen/item_text_size"
                tools:text="Step description"/>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_recipe_step_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        tools:src="@drawable/baking_logo"/>

</LinearLayout>
